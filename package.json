{
  "name": "@mendix/pluggable-widgets-tools",
  "version": "0.1.0",
  "description": "Mendix Pluggable Widgets Tools",
  "license": "MIT",
  "copyright": "Mendix 2019",
  "author": {
    "name": "Diego Antonelli",
    "email": "diego.antonelli@mendix.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mendix/pluggable-widgets-tools"
  },
  "keywords": [
    "typings",
    "typescript",
    "build",
    "gulp",
    "automation",
    "test",
    "jest",
    "mendix"
  ],
  "engines": {
    "node": ">=8.10"
  },
  "files": [
    "bin",
    "scripts",
    "configs",
    "test-config"
  ],
  "bin": {
    "@mendix/pluggable-widgets-tools": "bin/mx-scripts.js"
  },
  "dependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "@mendix/pluggable-widgets-api": "^0.1.0",
    "@mendix/pluggable-widgets-typing-generator": "^0.1.0",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.7.1",
    "babel-loader": "^8.0.4",
    "check-dependencies": "^1.1.0",
    "concurrently": "^4.1.0",
    "copy-webpack-plugin": "^4.5.2",
    "core-js": "^2.5.7",
    "css-loader": "^2.1.1",
    "del": "^4.1.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "extract-text-webpack-plugin": "4.0.0-beta.0",
    "file-loader": "^3.0.1",
    "gulp": "^4.0.0",
    "gulp-slash": "^1.1.3",
    "gulp-zip": "^4.2.0",
    "jasmine": "^3.2.0",
    "jasmine-core": "^3.2.1",
    "jest": "^24.7.1",
    "jest-junit": "^6.3.0",
    "json-loader": "^0.5.7",
    "json-source-map": "^0.4.0",
    "node-sass": "^4.11.0",
    "plugin-error": "^1.0.1",
    "prettier": "^1.16.4",
    "raw-loader": "^2.0.0",
    "sass-loader": "^7.1.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "ts-jest": "^24.0.2",
    "ts-loader": "^5.3.3",
    "typescript": "^3.4.2",
    "url-loader": "^1.1.2",
    "wdio-dot-reporter": "0.0.10",
    "wdio-jasmine-framework": "^0.3.8",
    "wdio-selenium-standalone-service": "0.0.12",
    "wdio-spec-reporter": "^0.1.5",
    "webdriverio": "^4.8.1",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1",
    "webpack-merge": "^4.2.1"
  },
  "devDependencies": {},
  "jest-junit": {
    "output": "../../../dist/testresults/TESTS-Jest.xml"
  },
  "scripts": {
    "start:server": "webpack-dev-server --config configs/webpack.config.js --env=dev --hot --quiet",
    "start:js": "npm run dev:js",
    "start:ts": "npm run dev:ts",
    "start:js:native": "npm run dev:js:native",
    "start:ts:native": "npm run dev:ts:native",
    "test": "jest --projects ./jest.config.js --no-cache --ci",
    "build:js": "gulp build --gulpfile scripts/gulp.js",
    "build:ts": "gulp buildTs --gulpfile scripts/gulp.js",
    "build:js:native": "gulp build --gulpfile scripts/gulp.native.js",
    "build:ts:native": "gulp buildTs --gulpfile scripts/gulp.native.js",
    "dev:js": "gulp watch --gulpfile scripts/gulp.js",
    "dev:ts": "gulp watchTs --gulpfile scripts/gulp.js",
    "dev:js:native": "gulp watch --gulpfile scripts/gulp.native.js",
    "dev:ts:native": "gulp watchTs --gulpfile scripts/gulp.native.js",
    "release:js": "gulp release --gulpfile scripts/gulp.js --silent",
    "release:ts": "gulp releaseTs --gulpfile scripts/gulp.js --silent",
    "release:js:native": "gulp release --gulpfile scripts/gulp.native.js --silent",
    "release:ts:native": "gulp releaseTs --gulpfile scripts/gulp.native.js --silent",
    "prelint": "npm run format",
    "lint": "eslint --config \"../../../.eslintrc.js\" --ext .jsx,.js,.ts,.tsx \"../../../src/\"",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --config \"../../../prettier.config.js\" --write \"../../../{src,test}/**/*.{js,jsx,ts,tsx}\"",
    "test:unit": "jest --projects ./test-config/jest.config.js",
    "test:unit:native": "jest --projects ./test-config/jest.native.config.js",
    "test:e2e:js": "babel ../../../tests --out-dir ../../../dist/e2e && wdio ./test-config/wdio.conf.js",
    "test:e2e:ts": "tsc -p ../../../tests/e2e/tsconfig.json && wdio ./test-config/wdio.conf.js"
  }
}
